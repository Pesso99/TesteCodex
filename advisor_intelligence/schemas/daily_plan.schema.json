{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DailyPlan",
  "type": "object",
  "required": ["generated_at", "advisor_goal", "archetype_focus", "timebox_minutes", "actions", "notes"],
  "properties": {
    "generated_at": {"type": "string", "format": "date-time"},
    "advisor_goal": {"type": "string", "enum": ["captar", "reativar", "educar", "alocar", "retenção"]},
    "archetype_focus": {"type": "string"},
    "timebox_minutes": {"type": "integer", "minimum": 1, "maximum": 10},
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rank", "contact_bucket", "task", "why_now", "eta_minutes"],
        "properties": {
          "rank": {"type": "integer", "minimum": 1},
          "contact_bucket": {"type": "string"},
          "task": {"type": "string"},
          "why_now": {"type": "string"},
          "eta_minutes": {"type": "integer", "minimum": 1}
        },
        "additionalProperties": false
      }
    },
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}
